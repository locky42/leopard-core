{
    "name": "locky42/leopard-core",
    "description": "Lightweight PHP framework core for routing, controllers, and application base.",
    "type": "library",
    "license": "MIT",
    "authors": [
      {
        "name": "Максим Зінченко",
        "email": "zinchenko.m.42@gmail.com"
      }
    ],
    "require": {
      "php": "^8.3",
        "psr/container": "^2.0",
        "symfony/yaml": "^7.3",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1"
    },
    "autoload": {
      "psr-4": {
        "Leopard\\Core\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Leopard\\Core\\Tests\\": "tests/"
      }
    },
    "require-dev": {
      "phpunit/phpunit": "^11.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
